---

import Analytics from '@vercel/analytics/astro';
import SpeedInsights from "@vercel/speed-insights/astro";
import MeetingPlanner from '../components/MeetingPlanner.jsx';
---
<html lang="en" class="scroll-smooth dark">
  <html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>What's The Time | Global Time Converter</title>
  </head>



  <body class="bg-[#fbfceb] text-[#1a1a1a] transition-colors duration-300 dark:bg-[#0b0f19] dark:text-white">

<div class="p-6 max-w-5xl mx-auto bg-glass backdrop-blur-md rounded-xl shadow-glass border border-white/10 transition-all duration-500">


  <section class="p-4 max-w-screen-xl mx-auto">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold mb-4">🗓️ Global Meeting Planner</h1>

  <div class="flex justify-end px-4 py-3">
        <button id="theme-toggle" class="px-3 py-1 rounded-full backdrop-blur bg-white/10 text-white border border-white/20 shadow-glass hover:scale-105 transition-all duration-300">
          🌓
        </button>
      </div>    
    </div>
    <p class="mb-6 text-gray-400">Plan & Schedule International Meetings across time zones effortlessly.</p>
    <MeetingPlanner client:load />
  </section>


  <div class="mt-10 text-center text-sm text-gray-600 dark:text-gray-400 py-3 border-t border-gray-200 dark:border-white/10">
    <a href="whatsthetime.online/landing">Made with ❤️ by &copy;whatsthetime.</a>
  </div>

</div>

  <!-- Dark Mode Script -->
    <script defer>
      const root = document.documentElement;
      const themeToggle = document.getElementById('theme-toggle');
      const userTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

      if (userTheme === 'dark' || (!userTheme && systemPrefersDark)) {
        root.classList.add('dark');
      }

      themeToggle.addEventListener('click', () => {
        root.classList.toggle('dark');
        localStorage.setItem('theme', root.classList.contains('dark') ? 'dark' : 'light');
      });
    </script>

  <Analytics />
    <SpeedInsights />
  </body>
</html>

