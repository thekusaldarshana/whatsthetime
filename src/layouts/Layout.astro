    <!-- Dark Mode Script -->
    <script>
      const root = document.documentElement;
      const themeToggle = document.getElementById('theme-toggle');
      const userTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

      if (userTheme === 'dark' || (!userTheme && systemPrefersDark)) {
        root.classList.add('dark');
      }

      themeToggle?.addEventListener('click', () => {
        root.classList.toggle('dark');
        localStorage.setItem('theme', root.classList.contains('dark') ? 'dark' : 'light');
      });
    </script>

    <!-- üïπÔ∏è Delayed Ad Loading -->
    <script>
      let adLoaded = false;
      function loadSidebarAd() {
        if (adLoaded) return;
        adLoaded = true;

        const adScript = document.createElement('script');
        adScript.src = "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6381695271630022";
        adScript.async = true;
        adScript.crossOrigin = "anonymous";
        document.head.appendChild(adScript);

        const adSlot = document.createElement('ins');
        adSlot.className = "adsbygoogle";
        adSlot.style.display = "block";
        adSlot.setAttribute("data-ad-client", "ca-pub-6381695271630022");
        adSlot.setAttribute("data-ad-slot", "7062749097");
        adSlot.setAttribute("data-ad-format", "auto");
        adSlot.setAttribute("data-full-width-responsive", "true");

        document.getElementById("sponsor-ad-slot").appendChild(adSlot);
        (adsbygoogle = window.adsbygoogle || []).push({});
      }

      window.addEventListener("scroll", loadSidebarAd, { once: true });
      window.addEventListener("pointermove", loadSidebarAd, { once: true });
    </script>

