---
// src/components/FeedbackForm.astro
---
<form
  action="https://formspree.io/f/YOUR_FORM_ID" 
  method="POST"
  class="max-w-lg mx-auto p-6 bg-white dark:bg-neutral-900 shadow-xl rounded-2xl space-y-4"
>
  <h2 class="text-2xl font-bold text-center text-neutral-800 dark:text-white">We value your feedback ðŸ’¬</h2>

  <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">
    Name
    <input
      type="text"
      name="name"
      required
      class="mt-1 block w-full rounded-md border border-neutral-300 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800 text-neutral-900 dark:text-white p-2"
    />
  </label>

  <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">
    Email
    <input
      type="email"
      name="email"
      required
      class="mt-1 block w-full rounded-md border border-neutral-300 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800 text-neutral-900 dark:text-white p-2"
    />
  </label>

  <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">
    Your Feedback
    <textarea
      name="message"
      rows="5"
      required
      class="mt-1 block w-full rounded-md border border-neutral-300 dark:border-neutral-700 bg-neutral-50 dark:bg-neutral-800 text-neutral-900 dark:text-white p-2"
    ></textarea>
  </label>

  <button
    type="submit"
    class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700 transition"
  >
    Submit
  </button>
</form>
