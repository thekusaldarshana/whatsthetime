---
import { onMount } from 'astro/client';
---

<div>
  <!-- ðŸŸ© Feedback Popup -->
  <div id="feedback-popup" style="
    position: fixed;
    bottom: -100%;
    left: 20px;
    width: 360px;
    max-width: 90%;
    border-radius: 12px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
    background: white;
    z-index: 9999;
    overflow: hidden;
    transition: bottom 0.6s ease-in-out;
  ">
    <!-- Header with close button -->
    <div style="display: flex; justify-content: space-between; padding: 6px 12px; background: #01c671; color: #1d1d1d;">
      <label class="font-semibold pt-1">Feedback</label>
      <button id="close-feedback-btn" style="
        background: transparent;
        border: none;
        font-weight: bold;
        font-size: 20px;
        cursor: pointer;
        color: #1d1d1d;
      ">Ã—</button>
    </div>

    <!-- OpnForm iframe -->
    <iframe
      style="border: none; width: 100%; height: 360px;"
      id="website-feedback-form-qrpdvs"
      src="https://opnform.com/forms/website-feedback-form-qrpdvs"
    ></iframe>
  </div>

  <!-- ðŸŸ¨ Floating Feedback Button -->
  <button id="feedback-button" style="
    display: none;
    position: fixed;
    bottom: 20px;
    left: 20px;
    background-color: #01c671;
    color: #1d1d1d;
    border: none;
    border-radius: 50px;
    padding: 10px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    z-index: 9999;
    box-shadow: 0 4px 14px rgba(0,0,0,0.25);
  ">
    ðŸ’¬ Feedback
  </button>
</div>

<script type="module">
  window.addEventListener('load', () => {
    setTimeout(() => {
      const popup = document.getElementById("feedback-popup");
      if (popup) popup.style.bottom = "20px";

      const closeBtn = document.getElementById("close-feedback-btn");
      const feedbackBtn = document.getElementById("feedback-button");

      closeBtn?.addEventListener("click", () => {
        popup.style.bottom = "-100%";
        feedbackBtn.style.display = "block";
      });

      feedbackBtn?.addEventListener("click", () => {
        popup.style.bottom = "20px";
        feedbackBtn.style.display = "none";
      });
    }, 15000); // Delay popup show
  });
</script>

<!-- âœ… Embed script after full load -->
<script defer src="https://opnform.com/widgets/iframe.min.js"></script>
